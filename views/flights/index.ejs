<%- include('../partials/header') %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Flights</title>
  </head>
  <body>
    <h1>All Upcoming Flights, A Lot of CA Airports Here</h1>
    <a href="/flights/new">
      <button>Update Travel Here</button>
    </a>
    <table>
      <thead>
        <tr>
          <th>Airline Company</th>
          <th>Airport</th>
          <th>Flight</th>
          <th>Departing</th>
          <th>Know More Here</th>
        </tr>
      </thead>
      <tbody>
        <% flights.forEach(f => { %>
        <tr>
          <td><%= f.airline %></td>
          <td><%= f.airport %></td>
          <td><%= f.flightNo %></td>
          <td><%= f.departs %></td>
          <td><a href="/flights/<%= f._id %>">More Info Here</a></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
<%- include('../partials/footer') %>
