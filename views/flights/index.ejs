<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Flights</title>
  </head>
  <body>
    <h1>All Upcoming Flights</h1>
    <a href="/flights/new">
      <button>Update Travel Here</button>
    </a>
    <table>
      <thead>
        <tr>
          <th>Airline Company</th>
          <th>Airport</th>
          <th>Flight Number</th>
          <th>Departing</th>
        </tr>
      </thead>
      <tbody>
        <% flights.forEach(f => { %>
        <tr>
          <td><%= f.airline %></td>
          <td><%= f.airport %></td>
          <td><%= f.flightNo %></td>
          <td>
            <%= f.departs.toLocaleString(undefined, {dateStyle: "medium",
            timeStyle: "short"}) %>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
